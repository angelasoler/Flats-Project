<header>
  <h1>Flats</h1>
  <h3>Boas vindas ao sistema de locação de apartamentos</h3>
  <div>
    <nav>
      <%= link_to 'Quero publicar um imóvel', new_property_owner_registration_path%>
      <% if @property_owner_signed_in %>
        <%= link_to 'Cadastrar Imóvel', new_property_path %>
      <% end %>
    </nav>
  </div>
</header>

<div>
  <nav>
    <%= link_to 'Quero alugar um imóvel', new_property_tenant_registration_path%>
    <% if @property_owner_signed_in %>
      <% if @properties.empty? %>
        <div><span>Nenhum imóvel disponível</span></div>
      <% end %>

      <section>
        <% @properties.each do |p| %>
          <%= link_to p.title, property_path(id: p.id) %>

          <%= p.description %>
          Quartos: <%= p.rooms %>
        <% end %>
      </section>

      <aside>
        <h2> Filtrar por tipo: </h2>
        <nav>
          <% @property_type.each do |type| %>
            <%= link_to type.name, property_type_path(type.id) %>
          <% end %>
        </nav> 
      </aside>

      <aside>
        <h2> Filtrar por região: </h2>
        <nav>
          <% @property_location.each do |location| %>
            <%= link_to location.name, location  %>
          <% end %>
        </nav> 
      </aside>
    <% end %>
  </nav>
</div>

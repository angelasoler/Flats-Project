<div>
<h1>
  <%= @properties.title %>
</h1>

<h2><%= @properties.description %></h2>

<dl>
  <dt>Tipo:</dt>
  <dd><%= @properties.property_type.name %></dd>

  <dt>Quartos:</dt>
  <dd><%= @properties.rooms %></dd>

  <dt>Banheiros:</dt>
  <dd><%= @properties.bathroom %></dd>

  <dt>Aceita Pets:</dt> 
  <% if @properties.pets? %>
    <dd>Sim</dd>
  <% else %>
    <dd>Não</dd>
  <% end %>

  <dt>Estacionamento:</dt>
  <% if @properties.parking_slot? %>
    <dd>Sim</dd>
  <% else %>
    <dd>Não</dd>
  <% end %>

  <dt>Diária:</dt> 
  <dd><%= number_to_currency(@properties.daily_rate)%></dd>
</dl>
  <%= link_to 'Voltar', root_path %>
</div>

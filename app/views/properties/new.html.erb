<h1><%= t('.title') %></h1>

<% if @property.errors.any? %>
  <ul>
    <% @property.errors.full_messages.each do |error| %>
      <li style='color: red;'>
     <li><%= error %></li>
    <%end%>
  </ul>
<% end %>

<%= form_with(model: @property) do |f| %>
  <div>
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :rooms, 'Quartos' %>
    <%= f.number_field :rooms %>
  </div>

  
  <div>
    <%= f.label :daily_rate, 'Diária' %>
    <%= f.number_field :daily_rate %>
  </div>

  <div>
    <%= f.label :property_type_id, 'Tipo' %>
    <%= f.collection_select :property_type_id, PropertyType.all, :id, :name %>
    <%= link_to 'Cadastrar Tipo De Imóvel',  new_property_type_path %>
  </div>

  <div>
    <%= f.label :property_location_id, 'Região' %>
    <%= f.collection_select :property_location_id, PropertyLocation.all, :id, :name %>
    <%= link_to 'Cadastrar Região Do Imóvel',  new_property_location_path %>
  </div>

  <div>
    <%= f.label :bathroom, 'Banheiros' %>
    <%= f.number_field :bathroom %>
  </div>

  <div>
    <%= f.label :pets, 'Aceita Pets' %>
    <%= f.check_box :pets %>
  </div>

  <div>
    <%= f.label :parking_slot, 'Estacionamento' %>
    <%= f.check_box :parking_slot %>
  </div>
  <%= f.submit 'Enviar' %>
<% end %>


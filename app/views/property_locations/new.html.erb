<h1>Cadastrar Região Do Imóvel</h1>

<% if @property_location.errors.any? %>
  <ul>
    <% @property_location.errors.full_messages.each do |error| %>
     <li><%= error %></li>
     <% if error == 'Nome já está em uso' %>
      <%= link_to 'Cadastrar Imóvel', new_property_path%>
      <% end %>
    <%end%>
  </ul>
<% end %>

<%= form_with(model: @property_location) do |f| %>
  <div>
    <%= f.label :name, 'Nome da região do seu imóvel' %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit 'Cadastrar' %>
<% end %>